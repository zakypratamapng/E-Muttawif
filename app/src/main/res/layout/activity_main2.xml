<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Background aplikasi"
        android:scaleType="centerCrop"
        android:alpha="0.4"
        android:src="@drawable/backgroundmuttowif" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <!-- Tombol Back -->
        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_logout"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Tombol kembali"
            android:layout_gravity="start"
            android:layout_marginEnd="8dp" />

        <!-- Header dengan tombol back -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#6200EE"
                android:gravity="center"
                android:padding="8dp"
                android:text="Dzikir dan Doa"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- Grid Menu Doa -->
        <GridLayout
            android:id="@+id/gridDoa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:columnCount="2"
            android:useDefaultMargins="true"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false">

            <!-- Contoh Menu (buat semua tombol di sini) -->
            <Button
                android:id="@+id/buttonNiatHaji"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="@string/niat_haji"
                android:backgroundTint="#6200EE"
                android:textColor="#FFFFFF"
                android:layout_margin="4dp" />

            <Button
                android:id="@+id/buttonNiatHajiQiran"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Niat Haji Qiran"
                android:backgroundTint="#6200EE"
                android:textColor="#FFFFFF"
                android:layout_margin="4dp" />

            <Button
                android:id="@+id/buttonDoaSelesaiIhram"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Doa Selesai Ihram"
                android:backgroundTint="#6200EE"
                android:textColor="#FFFFFF"
                android:layout_margin="4dp" />

            <Button
                android:id="@+id/buttonDoaTalbiyah"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Doa Talbiyah"
                android:backgroundTint="#6200EE"
                android:textColor="#FFFFFF"
                android:layout_margin="4dp" />

            <Button
                android:id="@+id/buttonDoaMasukMakkah"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Doa Masuk Makkah"
                android:backgroundTint="#6200EE"
                android:textColor="#FFFFFF"
                android:layout_margin="4dp" />

            <Button
                android:id="@+id/buttonDoaMasjidilHaram"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Doa Masjidil Haram"
                android:backgroundTint="#6200EE"
                android:textColor="#FFFFFF"
                android:layout_margin="4dp" />

            <Button
                android:id="@+id/buttonDoaLihatKaabah"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Doa Lihat Ka'bah"
                android:backgroundTint="#6200EE"
                android:textColor="#FFFFFF"
                android:layout_margin="4dp" />

            <Button
                android:id="@+id/buttonDoaTawaf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Doa Tawaf"
                android:backgroundTint="#6200EE"
                android:textColor="#FFFFFF"
                android:layout_margin="4dp" />

            <Button
                android:id="@+id/buttonDoaSai"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Doa Sa'i"
                android:backgroundTint="#6200EE"
                android:textColor="#FFFFFF"
                android:layout_margin="4dp" />

            <Button
                android:id="@+id/buttonDoaGuntingRambut"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Doa Gunting Rambut"
                android:backgroundTint="#6200EE"
                android:textColor="#FFFFFF"
                android:layout_margin="4dp" />

            <Button
                android:id="@+id/buttonDoaMasukArafah"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Doa Masuk Arafah"
                android:backgroundTint="#6200EE"
                android:textColor="#FFFFFF"
                android:layout_margin="4dp" />

            <Button
                android:id="@+id/buttonDoaWukuf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Doa Wukuf"
                android:backgroundTint="#6200EE"
                android:textColor="#FFFFFF"
                android:layout_margin="4dp" />

            <Button
                android:id="@+id/buttonDoaSampaiMuzdalifah"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Doa Sampai Muzdalifah"
                android:backgroundTint="#6200EE"
                android:textColor="#FFFFFF"
                android:layout_margin="4dp" />

            <Button
                android:id="@+id/buttonDoaSampaiMina"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Doa Sampai Mina"
                android:backgroundTint="#6200EE"
                android:textColor="#FFFFFF"
                android:layout_margin="4dp" />

            <Button
                android:id="@+id/buttonDoaLemparJumrah"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Doa Lempar Jumrah"
                android:backgroundTint="#6200EE"
                android:textColor="#FFFFFF"
                android:layout_margin="4dp" />

            <Button
                android:id="@+id/buttonDoaMasukMadinah"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Doa Masuk Madinah"
                android:backgroundTint="#6200EE"
                android:textColor="#FFFFFF"
                android:layout_margin="4dp" />

            <Button
                android:id="@+id/buttonDoaMasukMasjidNabawi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Doa Masjid Nabawi"
                android:backgroundTint="#6200EE"
                android:textColor="#FFFFFF"
                android:layout_margin="4dp" />

            <Button
                android:id="@+id/buttonDoaPulangHaji"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Doa Pulang Haji"
                android:backgroundTint="#6200EE"
                android:textColor="#FFFFFF"
                android:layout_margin="4dp" />

        </GridLayout>
    </LinearLayout>
</FrameLayout>